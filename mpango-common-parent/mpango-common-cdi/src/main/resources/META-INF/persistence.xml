<?xml version="1.0" encoding="UTF-8"?>
<persistence
        xmlns="http://java.sun.com/xml/ns/persistence"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
        version="2.0">
    <persistence-unit name="${persistence.persistence-unit}">
        <class>net.sf.mpango.common.entity.Locale</class>
        <class>net.sf.mpango.common.entity.Name</class>
        <provider>${persistence.provider}</provider>
        <jta-data-source>${persistence.jta-data-source}</jta-data-source>
        <properties>
            <property name="hibernate.dialect" value="${persistence.hibernate.dialect}"/>
            <property name="hibernate.hbm2ddl.auto" value="${persistence.hibernate.hbm2ddl.auto}"/>
        </properties>
    </persistence-unit>
</persistence>